@model IEnumerable<Gig.Models.GigPostingListItem>

@{
    ViewBag.Title = "AllGig";
}

<h2>AllGig</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionOfJob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayPerHour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GigPostId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionOfJob)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PayPerHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GigPostId)
        </td>
        <td>
            @Html.ActionLink("Apply", "Create", "GigApply") |
            @Html.ActionLink("Edit", "Edit", new { id = item.GigPostId }) |
            @Html.ActionLink("Details", "Detail", new { id = item.GigPostId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GigPostId })
        </td>
    </tr>
}

</table>
